<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ContactFragment"
    android:background="#eee">

    <ScrollView
        android:id="@+id/scrollView"
        android:background="#fff"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مرحبا بكم يسعدنا تواصلكم معنا عبر ارسال لنا أى استفسار او ملاحظه خاصه بكم"
            android:layout_marginBottom="50dp"
            android:textSize="28dp"
            android:textColor="#000"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EmployeeNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/HintText"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EmployeeName"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/edit_text_background"
                android:hint="الاسم"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="22dp"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EmployeeEmailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/HintText"
            android:layout_marginTop="15dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EmployeeEmail"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/edit_text_background"
                android:hint="البريد الإلكتروني"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textSize="22dp"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MessageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/HintText"
            android:layout_marginTop="15dp"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Message"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/edit_text_background"
                android:hint="نص الرسالة"
                android:inputType="text"
                android:padding="15dp"
                android:gravity="start"
                android:textSize="22dp"

                />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text=" إرسال "
            android:background="@drawable/btn1_background"
            android:textColor="#fff"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:drawableStart="@drawable/log_ic"
            android:paddingStart="80dp"
            android:drawablePadding="-90dp"
            android:id="@+id/Send"
            android:textSize="25dp"

            />

    </LinearLayout>
    </ScrollView>
</FrameLayout>